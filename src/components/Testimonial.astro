---
const { img, testimony, name, source, first } = Astro.props;
---

<div class=`card ${first}`>
    <img class="avatar" src=`${img}` alt="avatar image of a person">
    <p class="testimony">{testimony}</p>

    <div class="extraContainer">
        <div class="idContainer">
            <h3 class="name">{name}</h3>
            <h4 class="source">{source}</h4>
        </div>
        <div class="quoteIcon">
            <i class="bi bi-quote"></i>
        </div>
    </div>
</div>

<style>
    .card {
        padding-top: 0;
        height: 250px;
        display: grid;
        grid-template-columns: auto auto auto;
        grid-template-rows: auto auto auto;
        grid-template-areas: 
        ". avatar ."
        "testimony testimony testimony"
        "extraContainer extraContainer extraContainer";
    }

    .avatar {
        grid-area: avatar;
        border-radius: 50%;
        width: 50%;
        margin-top: -50px;
        justify-self: center;
        margin-bottom: 1rem;
        border: 3px solid var(--color-line);
    }

    .testimony {
        grid-area: testimony;
        font-style: italic;
        line-height: 1.5;
        text-align: left;
        color: var(--color-text);
    }

    .extraContainer {
        grid-area: extraContainer;
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 1rem;
    }

    .idContainer {
        display: flex;
        flex-direction: column;
        text-align: left;
    }

    .name {
        color: var(--color-title);
    }

    .source {
        margin-top: 0.5rem;
        font-weight: 100;
        color: var(--color-text-source);
    }

    .first {
        margin-left: 10rem;
    }

    .quoteIcon {
        color: var(--color-decoration);
        font-size: 3rem;
        transform: rotate(180deg);
    }

</style>