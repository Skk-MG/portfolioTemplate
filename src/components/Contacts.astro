<div class="contactContainer">
    <div class="imgContainer">
        <img src="../default.png" alt="">
    </div>

    <div class="infoContainer">
        <h1 class="name">name surname</h1>
        <h2 class="role">programming role</h2>
        <div class="iconContainer">
            <p class="icon"><i class="bi bi-linkedin"></i></p>
            <p class="icon"><i class="bi bi-facebook"></i></p>
            <p class="icon"><i class="bi bi-twitter"></i></p>
        </div>
    </div>

    <div class="buttonContainer">
        <button class="btn">Download CV</button>
    </div>

    <footer>
        <p class="rights">@2024 All rights reserved.</p>
    </footer>
</div>

<style>
    .contactContainer {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-left: 1px solid var(--color-line);
        border-right: 1px solid var(--color-line);
        background-color: var(--color-bg-card);
    }

    .imgContainer {
        margin-top: 5rem;
    }

    img {
        border-radius: 50%;
        border: 3px solid var(--color-line);
    }

    .infoContainer {
        margin: 2rem 0 3rem 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .iconContainer {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        justify-content: center;
    }

    .role {
        margin: 1rem 0 2rem 0;
        align-self: center;
        font-weight: 100;
        color: var(--color-text);
    }

    .name {
        align-self: center;
        color: var(--color-title);
    }

    .icon {
        font-size: 1.5rem;
        cursor: pointer;
    }

    .icon:hover {
        transition: 1s;
        transform: scale(1.5, 1.5);
        color: var(--color-decoration)
    }
    
    .btn:hover{
        color: #fff;
        background-color: #616467;
        box-shadow: inset 0 0 0 2px var(--color-decoration);
    }

    footer {
        position: absolute;
        bottom: 0;
        overflow: hidden;
    }

    .rights {
        color: var(--color-text);
    }



    @media (max-width: 1200px) {
        img {
            width: 250px;
        }
    }

    @media (max-width: 991px) {
        img {
            width: 200px;
        }

        .name {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 576px) {
        img {
            width: 150px;
        }

        .name {
            font-size: 1.3rem;
        }

        .role {
            font-size: 1.1rem;
        }

        .icon {
            font-size: 1.3rem;
        }

        .btn {
            font-size: 14px;
            letter-spacing: 2px;
            min-width: 100px;
            padding: 12px 12px 16px;
        }

        .rights {
            font-size: 0.8rem;
        }
    }

    @media (max-width: 320px) {
        img {
            width: 100px;
        }

        .name {
            font-size: 1.2rem;
            text-align: center;
        }
        
        .role {
            font-size: 1rem;
            text-align: center;
        }

        .icon {
            font-size: 1rem;
        }

        .iconContainer {
            gap: 1rem;
        }

        .btn {
            font-size: 10px;
            letter-spacing: 1px;
            min-width: 80px;
            padding: 8px 8px 8px;
        }

        .rights {
            font-size: 0.5rem;
        }
    }
}
</style>