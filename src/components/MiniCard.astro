---
const { bootstrapIcon, title, number} = Astro.props;
---

<div class="card">
    <p class="icon"><i class=`${bootstrapIcon}`></i></p>
    <h2 class="title">{title}</h2>
    <p class="numbers">{number}</p>
</div>

<style>

  .card {
    gap: 1.2rem;
    margin: 20px 20px 20px 20px;
    width: calc(25%);
    padding: 30px;
  }

  .icon {
    color: var(--color-decoration);
    font-size: 2rem;
  }

  .title {
    font-size: 1.2rem;
    color: var(--color-title);
  }

  .numbers {
    font-size: 2rem;
    color: var(--color-text);
    letter-spacing: 1px;
  }

</style>