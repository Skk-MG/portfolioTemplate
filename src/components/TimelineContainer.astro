---
const { date, studies, title, text } = Astro.props;
---

<div class="contentContainer blob">
    <div class="content left">
        <h2 class="date">{date}</h2>
        <p class="studies">{studies}</p>
    </div>
</div>
<div class="contentContainer">
    <div class="content right">
        <h2 class="title">{title}</h2>
        <p class="text">{text}</p>
    </div>
</div>


<style>
    .content.left {
        display: flex;
        align-items: flex-end;
        flex-direction: column;
        gap: 0.5rem;
    }

    .date {
        color: var(--color-title);
    }

    .studies {
        color: var(--color-text);
    }

    .content.right {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        text-align: left;
        width: 100%;
        gap: 0.5rem;
    }

    .title {
        color: var(--color-title);
    }

    .text {
        color: var(--color-text);
        line-height: 1.5;
    }

    .contentContainer {
        padding: 1rem;
        position: relative;
    }

    .blob::after {
        content: '';
        position: absolute;
        width: 7px;
        height: 7px;
        background-color: var(--color-bg);
        border: 4px solid var(--color-decoration);
        border-radius: 50%;
        top: 19px;
        right: -5px;
        z-index: 2;
    }

    .blob::before {
        content: '';
        position: absolute;
        width: 11px;
        height: 11px;
        background-color: var(--color-bg);
        border: 5px solid var(--color-secondary-decoration);
        border-radius: 50%;
        right: -8px;
        z-index: 2;
    }

</style>