---
import ProgressBar from "./ProgressBar.astro";
import BarInfoContainer from "./BarInfoContainer.astro";
const { title } = Astro.props;
---

<div class="progressBarContainer">
    <h1 class="title">{title}</h1>
    <div>
        <BarInfoContainer skill="Skill #1" percentage="25%"/>
        <ProgressBar width="width: 25%"/>
    </div>
    <div>
        <BarInfoContainer skill="Skill #2" percentage="52%"/>
        <ProgressBar width="width: 52%"/>
    </div>
    <div>
        <BarInfoContainer skill="Skill #3" percentage="60%"/>
        <ProgressBar width="width: 60%"/>
    </div>
    <div>
        <BarInfoContainer skill="Skill #4" percentage="70%"/>
        <ProgressBar width="width: 70%"/>
    </div>
</div>

<style>

    .progressBarContainer {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .title {
        margin-bottom: 0.5rem;
        color: var(--color-title);
    }

</style>