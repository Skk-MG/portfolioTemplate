---
const { title, price, time, button, feature, feature2, feature3 } = Astro.props;
---

<div class="card">

    <h1 class="title">{title}</h1>

    <div class="priceContainer">
      <h2 class="price">${price}</h2>
      <p class="time">{time}</p>
    </div>

    <div class="buttonContainer">
      <button class="btn">{button}</button>
    </div>
  
    <div class="features">
      <ul>
        <li>{feature}</li>
        <li>{feature2}</li>
        <li>{feature3}</li>
      </ul>
    </div>
</div>

<style>

  .title {
    font-size: 1rem;
    font-weight: 100;
    color: var(--color-title);
    width: max-content;
  }

  .title:after {
    display:block;
    content: '';
    border-bottom: solid 3px var(--color-decoration);  
    transform: scaleX(0);  
    transition: transform 250ms ease-in-out;
  }

  .card:hover .title:after { 
    transform: scaleX(1); 
  }

  .priceContainer {
    margin: 2rem 0 1.5rem 0;
  }

  .price {
    font-size: 2rem;
    color: var(--color-title);
  }

  .time {
    font-size: 0.8rem;
    color: var(--color-text);
  }

  .btn:hover{
    color: #fff;
    background-color: #616467;
    box-shadow: inset 0 0 0 2px var(--color-decoration);
  }

  .features {
    margin-top: 1rem;
    color: var(--color-text);
    ul {
      padding: 0;
      margin: 10px 0 10px 0;
      list-style-type: none;
      li {
        margin: 20px 0;
        font-size: 14px;
      }
    }
  }

</style>