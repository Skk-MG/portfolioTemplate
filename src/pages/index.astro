---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
	<main>
		<div class="mainInfoContainer">
			<h1 class="name">name surname</h1>
			
			<div class="carousel">
				<div class="carousel-container">
				  <div class="slide"><h2 class="role">programming role</h2></div>
				  <div class="slide"><h2 class="role">another programming role</h2></div>
				  <div class="slide"><h2 class="role">third programming role</h2></div>
				</div>
			  </div>
		</div>
	</main>

	<style>
		.mainInfoContainer {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 1.5rem;
		}
		.name {
			font-size: 4rem;
			color: var(--color-title);
		}

		.carousel {
			width: 300px;
			overflow: hidden;
		}

		.carousel-container {
			display: flex;
			transition: transform 0.5s ease;
		}

		.slide {
			flex: 0 0 100%;
			text-align: center;
		}

		.role {
			font-weight: 100;
			color: var(--color-text-source);
		}

		main {
			display: grid;
			place-items: center;
		}

		@media (max-width: 767px) {

			.name {
				font-size: 3rem;
			}
		}

		@media (max-width: 576px) {
			.name {
				font-size: 2rem;
			}

			.slide {
				font-size: 0.9rem;
			}
		}

		@media (max-width: 320px) {
			.carousel {
				width: 200px	;
			}

			.name {
				font-size: 1.5rem;
			}

			.role {
				font-size: 1.2rem;
				text-align: center;
			}

		}
	</style>
</BaseLayout>